		<div class="inner-page"> 
			
			<div id="input-container">
				
				<div class='start-container'>
					start: <input type="time" name="start-time" id="start-time" class="time-input"/>
				</div> <!-- start container -->
				
				<div class='end-container'>
					end: <input type="time" name="end-time" id="end-time"/>
				</div> <!-- end container -->
				
				<div class='description-container'>
					<input id="description-input" type="text" name="log-activity" placeholder="description of activity" class="log-description"/>
				</div> <!-- description container -->
				
				<div class='type-selection-container'>
					<select name="activity-type" id="type-selection">
						<option> </option>
						<option> Work</option>
						<option> Leisure</option>
						<option> Daily Routines</option>
						<option> Sleep</option>
						<option> Eating</option>
						<option> Transportation</option>
						<option> Exercise </option>
					</select>
				</div> <!-- type selection container -->
				
				<div class="buttons">
					<p class="cancel-button">
						Cancel
					</p>
					<p class="post-button">
						Log
					</p>
				</div> <!-- post button -->
				
			</div> <!-- input container  -->
		
			<div class="view-container">

				<div class="log-header-container">
					<div class="log-header"> 
						Today's Log
						<p class="log-subheader"> <%= app_data.date %> </p>
					</div> <!-- log header  -->
				

				</div> <!-- log header container  -->
			
				<div class="log-list-container">
					<ul id="log-list">
						<% app_data.logs.forEach(function(item) { %>
							<% if (app_data.date == item.date) { %>
								<li class="log-list-style"> 
									<div class="li-time">
										<%= item.start + " - " + item.end %> 
									</div> <!-- li time  -->
									<div class="li-description">
										<%= item.description %>
									</div> <!-- li description  -->
								</li>
							<% } %>
						<% }); %>
					</ul>
				</div> <!-- log list container  -->

			</div> <!-- view container  -->

		</div> <!-- inner page  -->

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
		<script src="/javascripts/Log.js"></script>
	</body>
</html>